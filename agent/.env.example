# LiveKit Configuration
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# LLM Configuration
# Provider options: openai | anthropic | google | ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=your-openai-key

# STT Configuration
# Provider options: deepgram | openai | google | assemblyai
STT_PROVIDER=deepgram
STT_MODEL=nova-2
DEEPGRAM_API_KEY=your-deepgram-key

# TTS Configuration
# Provider options: openai | elevenlabs | cartesia | google
TTS_PROVIDER=openai
TTS_VOICE=alloy

# Optional: Uncomment if using alternative providers
# ANTHROPIC_API_KEY=your-anthropic-key
# ELEVENLABS_API_KEY=your-elevenlabs-key
# OLLAMA_BASE_URL=http://localhost:11434

# n8n Workflow Integration
# For production webhooks (UUIDs): endpoint will be https://architoon.app.n8n.cloud/webhook/{UUID}
# For test webhooks: set base URL to https://architoon.app.n8n.cloud/webhook-test
N8N_WEBHOOK_BASE_URL=https://architoon.app.n8n.cloud/webhook-test
N8N_API_KEY=your-n8n-api-key

# Personal Preferences
# Weather location: latitude,longitude OR zip code (format depends on your n8n weather API)
WEATHER_LOCATION=lat,long
